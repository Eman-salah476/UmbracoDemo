                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">


                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@homeContent?.Url()">@homeContent?.Name</a>
                    </li>
                    @if (selection != null)
                    {
                        @foreach (var item in selection)
                        {
                            <li class="nav-item">
